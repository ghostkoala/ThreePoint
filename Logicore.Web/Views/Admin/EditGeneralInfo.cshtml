@model Logicore.Core.ServerModels.AdminGeneralInfoDto
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button data-dismiss="modal" class="close">&times;</button>
            <h3 class="modal-title">修改信息</h3>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm(FormMethod.Post, new
            {
                @class = "form-horizontal",
                name = "editInfoFrom",
                id = "editInfoFrom"
            }))
            {
                @Html.HiddenFor(m => m.Id)
                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.RealName)：</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.RealName, new { @class = "form-control", placeholder = "请输入姓名" })
                        @Html.ValidationMessageFor(m => m.RealName)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.Email)：</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "请输入电子邮箱" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
            }
        </div>
        <div class="modal-footer">
            <button class="btn btn-sm" data-dismiss="modal">关闭</button>
            <button id="submit" class="btn btn-sm btn-success" data-Url="/Admin/EditGeneralInfo"
                type="submit">提交</button>
        </div>
    </div>
</div>

<script src="~/js/admin/editinfo.js" asp-append-version="true"></script>