<link href="~/lib/bootstrap-table/bootstrap-table.min.css" rel="stylesheet" />
<script src="~/lib/bootstrap-table/bootstrap-table.min.js"></script>
<script src="~/lib/bootstrap-table/locale/bootstrap-table-zh-CN.js"></script>

<div class="panel-body" style="padding-bottom:0px;">
    <div class="panel panel-default">
        <div class="panel-heading">查询条件</div>
        <div class="panel-body">
            <form id="formSearch" class="form-horizontal">
                <div class="form-group form-inline row" style="margin-top:15px">
                    <label class="control-label col-sm-2">指定类型</label>
                    <!--下拉搜索框--> <select name="IncludeType" id="IncludeType" class="selectpicker form-control col-sm-2">
                        <option value="">
                            请选择
                        </option>
                        <option value=1>
                            模块
                        </option>
                        <option value=2>
                            菜单
                        </option>
                        <option value=3>
                            操作
                        </option>
                    </select>
                    <label class="control-label col-sm-2">不搜索类型</label>
                    <!--下拉搜索框-->
                    <select name="ExcludeType" id="ExcludeType" class="selectpicker form-control col-sm-2">
                        <option value="">
                            请选择
                        </option>
                        <option value=1>
                            模块
                        </option>
                        <option value=2>
                            菜单
                        </option>
                        <option value=3>
                            操作
                        </option>
                    </select>
                    <label class="control-label col-sm-2">启用情况</label>
                    <!--下拉搜索框-->
                    <select name="IsEnable" id="IsEnable" class="queryDevice selectpicker form-control col-sm-2">
                        <option value=0>
                            请选择
                        </option>
                        <option value=1>
                            启用
                        </option>
                        <option value=-1>
                            禁用
                        </option>
                    </select>
                </div>
                <div class="form-group form-inline row" style="margin-top:15px">
                    <label class="control-label col-sm-2">指定模块</label>
                    <!--下拉搜索框-->
                    <select name="SearchModuleId" id="SearchModuleId"
                        class="queryDevice selectpicker form-control col-sm-2">
                        <option value="">
                            请选择
                        </option>
                    </select>

                    <label class="control-label col-sm-2">指定菜单</label>
                    <!--下拉搜索框-->
                    <select name="SearchMenuId" id="SearchMenuId"
                        class="queryDevice selectpicker form-control col-sm-2">
                        <option value="">
                            请选择
                        </option>
                    </select>

                    <div class="col-sm-2" style="text-align:left;">
                        <button type="button" id="btn_query" class="btn btn-primary">查询</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div id="toolbar" class="btn-group">
        <button id="btn_add" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
        </button>
        <button id="btn_edit" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>修改
        </button>
        <button id="btn_delete" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>删除
        </button>
    </div>

    <table id="tb_menus" style="table-layout:fixed;word-break:break-all;"></table>
</div>

<!--模态框-->

<!--模态框-添加按钮开始-->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" data-backdrop="false"
    aria-hidden="true">
</div>
<!--模态框-添加按钮结束-->

<!--模态框-编辑按钮开始-->
<div class="modal fade" id="editModal" tabindex="-2" role="dialog" aria-labelledby="editModalLabel"
    data-backdrop="false" aria-hidden="true">
</div>
<!--模态框-编辑按钮结束-->

<!--模态框--图标选择开始-->
<div class="modal fade" id="selectIconModal" tabindex="-3" role="dialog" aria-labelledby="selectIconLabel"
    data-backdrop="false" aria-hidden="true">
</div>
<!--模态框--图标选择结束-->

