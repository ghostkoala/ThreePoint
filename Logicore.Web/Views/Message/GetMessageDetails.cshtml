@model Logicore.Core.ViewModel.MessageQueryViewModel
<div></div>
<div class="container-fluid">
    <p class="bg-primary">标题：@Model.Title</p>
    <p class="bg-success">内容：@Model.Contents</p>
    <p class="bg-info">详细情况：
        接收人数：@Model.Total
        阅读人数：@Model.ReadedNumber
        创建时间：@Model.CreateDateTime
        @if (Model.Details.Count > 0)
        {
            foreach (var item in Model.Details)
            {
                if (item.IsReaded)
                    @Html.DisplayText("阅读者："+　@item.UserName　+　" 已于"　+　@item.ReadDate+"读取此信息")
                else
                    @Html.DisplayText("阅读者："+　@item.UserName　+　" 并没读取此信息")
            }
        }
        else
        {
            @Html.DisplayText("无人阅读者")
        }
    </p>
</div>