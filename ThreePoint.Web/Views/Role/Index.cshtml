<link href="~/lib/bootstrap-table/bootstrap-table.min.css" rel="stylesheet" />
<script src="~/lib/bootstrap-table/bootstrap-table.min.js"></script>
<script src="~/lib/bootstrap-table/locale/bootstrap-table-zh-CN.js"></script>

<div class="panel-body" style="padding-bottom:0px;">
    <div class="panel panel-default">
        <div class="panel-heading">查询条件</div>
        <div class="panel-body">
            <form id="formSearch" class="form-horizontal">
                <div class="form-group form-inline row" style="margin-top:15px">
                    <label class="control-label col-sm-2">角色名</label>
                    <input type="text" class="form-control col-sm-2" id="searchName" placeholder="请输入要查找的数据">

                    <label class="control-label col-sm-2">描述</label>
                    <input type="text" class="form-control col-sm-2" id="searchDescription" placeholder="请输入要查找的数据">

                    <div class="col-sm-2" style="text-align:left;">
                        <button type="button" id="btn_query" class="btn btn-primary">查询</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div id="toolbar" class="btn-group">
        <button id="btn_add" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
        </button>
        <button id="btn_edit" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>修改
        </button>
        <button id="btn_delete" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>删除
        </button>
        <button id="btn_editPermission" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>配置限权
        </button>
    </div>

    <table id="tb_roles" style="table-layout:fixed;word-break:break-all;"></table>
</div>

<!--模态框-->

<!--模态框-添加按钮开始-->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" data-backdrop="false"
    aria-hidden="true">
</div>
<!--模态框-添加按钮结束-->

<!--模态框-编辑按钮开始-->
<div class="modal fade" id="editModal" tabindex="-2" role="dialog" aria-labelledby="editModalLabel"
    data-backdrop="false" aria-hidden="true">
</div>
<!--模态框-编辑按钮结束-->

<!--模态框-编辑按钮开始-->
<div class="modal fade" id="editPermission" tabindex="-2" role="dialog" aria-labelledby="editPermission"
    data-backdrop="false" aria-hidden="true">
</div>
