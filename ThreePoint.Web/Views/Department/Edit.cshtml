@using Microsoft.AspNetCore.Mvc.Rendering
@model ThreePoint.Core.ServerModels.DepartmentDto
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button data-dismiss="modal" class="close">&times;</button>
            <h3 class="modal-title">修改部门</h3>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="form-inline" style="text-align: center;">
                    <label class="control-label">查询部门</label>
                    <input id="searchDepartment" name="searchDepartment" class="form-control" placeholder="请输入要查询的部门" />
                    <button id="btnSearch" class="btn btn-primary">搜 索</button>
                </div>
                <div class="form-group">
                    <textarea id="departmentResult" class="form-control"></textarea>
                </div>
            </div>
            <hr />
            <label class="control-label">修改：</label>
            @using (Html.BeginForm(FormMethod.Post, new
            {
                @class = "form-horizontal",
                name = "editform",
                id = "editform"
            }))
            {
                @Html.HiddenFor(x=>x.Id)
                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.Name)：</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "请输入部门名称" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.ParentId)：</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.ParentId, new { @class = "form-control", placeholder = "请输入上级部门Id" })
                        @Html.ValidationMessageFor(m => m.ParentId)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.Enabled)：</label>
                    <div class="col-sm-1">
                        @Html.CheckBoxFor(m => m.Enabled, new { @class = "form-control"})
                    </div>
                </div>
            }
        </div>
        <div class="modal-footer">
            <button class="btn btn-sm" data-dismiss="modal">关闭</button>
            <button id="submit" class="btn btn-sm btn-success" data-Url="/department/edit" type="submit">提交</button>
        </div>
    </div>
</div>

<script src="~/js/department/addoredit.js" asp-append-version="true"></script>